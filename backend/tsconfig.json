{
   "compilerOptions": {
      "typeRoots": ["./node_modules/@types"],
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true
   },
   "exclude": [
      "node_modules",
      "dist"
    ],
    "include": [
      "src/**/*.ts",
      "src/**/**/*.ts",
      "src/**/**/**/*.ts"
    ],
}